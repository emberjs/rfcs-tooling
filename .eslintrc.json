{
  "plugins": [
    "n",
    "mocha",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:n/recommended",
    "plugin:mocha/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": ["test/**/*.js", "tests/**/*.mjs"],
      "env": {
        "mocha": true
      }
    }
  ]
}
